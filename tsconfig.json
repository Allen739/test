{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/web/*": [
        "./src/web/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "src/web/**/*",
    "src/agent/**/*",
    "src/models/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "pages/**/*",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "src/cli.tsx",
    "src/components"
  ]
}
